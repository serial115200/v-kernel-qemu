{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "启动 QEMU (GDB Server)",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/start-qemu.sh",
            "args": [
                "${workspaceFolder}/build/linux-6.14.4/arch/x86/boot/bzImage",
                "${workspaceFolder}/build/rootfs.ext4",
                "${workspaceFolder}/build/linux-6.14.4/vmlinux"
            ],
            "isBackground": true,
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^(.*)$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^正在启动 QEMU",
                    "endsPattern": "^GDB server ready on port 1234"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "停止 QEMU",
            "type": "shell",
            "command": "pkill -f 'qemu-system-x86_64.*bzImage' || true",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}
